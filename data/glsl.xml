<Blobserver>
    <Flow>
        <Actuator>
            <Type>Actuator_GLSL</Type>
            <Param>
                <Name>vertexFile</Name>
                <Value>glsl.vert</Value>
            </Param>
            <Param>
                <Name>fragmentFile</Name>
                <Value>glsl.frag</Value>
            </Param>
        </Actuator>
        <Source>
            <Type>Source_2D_OpenCV</Type>
            <Subsource>300</Subsource>
            <Param>
                <Name>framerate</Name>
                <Value>15</Value>
            </Param>
            <Param>
                <Name>iso</Name>
                <Value>400</Value>
            </Param>
            <Param>
                <Name>width</Name>
                <Value>640</Value>
            </Param>
            <Param>
                <Name>height</Name>
                <Value>480</Value>
            </Param>
        </Source>
        <Client>
            <Address>localhost</Address>
            <Port>9000</Port>
        </Client>
        <Server>
            <Address>localhost</Address>
            <Port>9002</Port>
        </Server>
    </Flow>
</Blobserver>
